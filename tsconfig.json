{
  "compilerOptions": {
    "lib": ["ESNext"],
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules/*"]
}
