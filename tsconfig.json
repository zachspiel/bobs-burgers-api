{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ESNext", "es2018", "esnext.asynciterable"],
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "target": "es2018"
  },
  "exclude": ["node_modules/*"]
}
