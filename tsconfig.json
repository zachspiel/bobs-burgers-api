{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ESNext", "es2018", "esnext.asynciterable"],
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "lib",
    "sourceRoot": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "target": "es2018",
    "types": ["node", "mocha"]
  },
  "exclude": ["node_modules/*"],
  "include": ["src"]
}
